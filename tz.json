{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "debugMode": true,
  "elmType": "div",
  "attributes": {
    "class": "custom-card"
  },
  "style": {
    "background-color": "#ffffff",
    "border-radius": "10px",
    "box-shadow": "0 4px 8px rgba(0, 0, 0, 0.1)",
    "padding": "20px",
    "max-width": "800px",
    "margin": "0 auto",
    "display": "flex",
    "flex-direction": "column",
    "gap": "20px"
  },
  "children": [
    {
      "elmType": "div",
      "attributes": {
        "class": "card-header"
      },
      "style": {
        "display": "flex",
        "justify-content": "space-between",
        "align-items": "center"
      },
      "children": [
        {
          "elmType": "div",
          "attributes": {
            "class": "business-process"
          },
          "style": {
            "font-size": "18px",
            "font-weight": "bold",
            "color": "#333"
          },
          "children": [
            {
              "elmType": "span",
              "style": {
                "font-weight": "normal",
                "color": "#555"
              },
              "txtContent": "Process Name"
            }
          ]
        },
        {
          "elmType": "div",
          "attributes": {
            "class": "recovery-status rerunnable"
          },
          "style": {
            "padding": "5px 10px",
            "border-radius": "4px",
            "color": "#ffffff",
            "font-size": "14px",
            "font-weight": "bold",
            "background-color": "#4caf50"
          },
          "txtContent": "Rerunnable"
        }
      ]
    },
    {
      "elmType": "div",
      "attributes": {
        "class": "card-section"
      },
      "style": {
        "display": "flex",
        "flex-wrap": "wrap",
        "gap": "20px"
      },
      "children": [
        {
          "elmType": "div",
          "attributes": {
            "class": "card-block"
          },
          "style": {
            "flex": "1 1 calc(50% - 20px)",
